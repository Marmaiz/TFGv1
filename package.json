{
  "name": "TFGMaria",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.6",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-familias": "cds watch --open familias/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy TFGMaria --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-cajas": "cds watch --open cajas/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-pedidos": "cds watch --open pedidos/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-entradas": "cds watch --open entradas/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-socio": "cds watch --open socio/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-cliente": "cds watch --open cliente/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-calibre": "cds watch --open calibre/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-entrada": "cds watch --open entrada/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "connectivity": true,
      "html5-repo": true,
      "portal": true,
      "application-logging": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/familias",
    "app/cajas",
    "app/socio",
    "app/cliente",
    "app/calibre",
    "app/entrada"
  ]
}
