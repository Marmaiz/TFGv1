<core:FragmentDefinition 
	xmlns:core="sap.ui.core"
	xmlns="sap.m" >

      <Dialog
        title="Seleccionar entradas"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin">

            <Table
                id="tblEntradas"
                items="{
            path: '/Entrada',
            parameters: {expand: 'Socio, Producto'},
            filters: [
                { path: 'Kilos_disponibles', operator: 'GT', value1: 0 }
            ]
        }">
                
                <columns>
                    <Column><Text text="Socio"/></Column>
                    <Column><Text text="Producto"/></Column>
                    <Column><Text text="Kilos disponibles"/></Column>
                    <Column><Text text="Kilos a utilizar"/></Column>
                   <!-- <Column><Text text="Merma"/></Column>-->
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{Socio/Nombre}" />
                            <Text text="{Producto/Nombre}" />
                            <Text text="{Kilos_disponibles}" />
                            <Input
                                type="Number"
                                value="{NuevaEntradaModel>Kilos_Usados}"/>
                            <!-- <Input
                                type="Number"
                                value="{NuevaEntradaModel>Kilos_Merma}"/>-->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </VBox>

        <beginButton>
            <Button text="Aceptar" press="onConfirmarEntradas"/>
        </beginButton>

        <endButton>
            <Button text="Cancelar" press="onCancelarDialog"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>