<core:FragmentDefinition 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m" 
	xmlns:t="sap.ui.table">

    <Dialog id="dlgNuevoPedido" title="Nuevo Pedido" class="sapUiContentPadding">

        <VBox>
            <Label text="Cliente"/>
            <ComboBox
                items="{ path: '/Cliente'}"
                selectedKey="{NuevoPedidoModel>/Cliente_Id}"
                width="100%">
                <core:Item key="{Id}" text="{Nombre}" />
            </ComboBox>

            <Label text="Fecha pedido"/>
            <DatePicker  value="{NuevoPedidoModel>/Fecha_Pedido}" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy"/>

        </VBox>

        <beginButton>
            <Button text="Crear" press=".onConfirmarNuevoPedido" />
        </beginButton>

        <endButton>
            <Button text="Cancelar" press=".onCancelarNuevoPedido" />
        </endButton>

    </Dialog>

</core:FragmentDefinition>